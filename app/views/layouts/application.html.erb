<!DOCTYPE html>
<html>
  <head>
    <title>Dungeonbuddies</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>
  <body>
    <section class="hero is-fullheight is-dark">
      <div class="hero-head">
        <nav class="navbar">
          <div class="container">
            <div class="navbar-brand">
              <%= link_to root_path,
                class: 'navbar-item has-text-weight-bold has-text-grey' do %>
                <span class="dnb-mark">ðŸœƒ</span> D&B
              <% end %>
            </div>

            <div class="navbar-end has-text-grey is-uppercase is-size-7 has-text-weight-semibold">
              <% if signed_in? %>
                <%= button_to "Sign Out",
                  sign_out_path,
                  method: :delete,
                  class: "navbar-item" %>
              <% else %>
                <%= link_to "Sign In", sign_in_path, class: "navbar-item" %>
              <% end %>
            </div>
          </div>
        </nav>
      </div>

      <div class="hero-body">
        <div class="container">
          <div id="flash">
            <% flash.each do |key, value| %>
              <div id="flash_<%= key %>"><%= h value %></div>
            <% end %>
          </div>

          <%= yield %>
        </div>
      </div>
    <%= yield %>
  </body>
</html>
